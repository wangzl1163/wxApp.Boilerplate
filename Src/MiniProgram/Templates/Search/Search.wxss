.searchView {
  position: relative;
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
  height: 88rpx;
  background-color: #fff;
  font-size: 30rpx;
  box-shadow: inset 0 0 0 0 rgba(0, 0, 0, 0.10);
}

.search-sub {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
  width: 79.5%;
  height: 56rpx;
  background-color: #f4f4f4;
  border: 3rpx solid #ccc;
  border-radius: 8rpx;
}

.searchInput {
  background-color: #f4f4f4;
  padding-left: 8rpx;
  height: 56rpx;
  width: 87%;
}

.searchBtn {
  width: 32rpx;
  height: 32rpx;
}

.wxSearchInner {
  padding-left: 10rpx;
}
.search-text {
  height: 48rpx;
  margin-left: 36rpx;
  font-size:28rpx;
  color:#40A0EE;
}
.clearkey-view{
  width:28rpx;
  height:28rpx;
  margin-top:15rpx;
  float:right;
  margin-bottom: auto;
}
.show-clear {
  display: block;
  width: 28rpx;
  height: 28rpx;
}

.hide-clear {
  display: none;
}